
  <%- include('./header.ejs') %> 
  
      <h1 class="p-2 mt-5 font-italic">All Pizza Orders</h1>
      <div class="container">
          <div class="mt-5">
            <% if(orders.length >0 ) {%>
                <% orders.forEach(order=>{ %>
                    <div style="border-left: 10px solid #555;" class="row mt-4">
                        <div class="col-md-2">
                            <img src="../images/pizza.png" width="160" alt="">
                        </div>
                        <div class="col-md-2">
                            <h5>Name: <%= order.name %> </h5>
                            <p>Pizza: <%= order.pizza %> </p>
                            <p>Location: <%= order.location %> </p>
                            <p>Order Time: <%= order.createdAt %> </p>
                        </div>
                    </div>
                    <hr>
               <% }) %> 
            <% } else {%>
                <h4 class="text-center p-5">There are no orders yet as of now</h4>
            <% } %>
        </div>
      </div>
   

  <%- include('./footer.ejs') %>  
